@section Scripts{

<script type="text/javascript">


    $(document).ready(function () {
        loadDatainTable();
        DeleteCustomer();
    });


    function loadDatainTable(){
        //debugger;
        var url = "/Customers/GetCustomer/";
        $.ajax({
            url: url,
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var tbody = $('#table-body');
                tbody.empty();
                debugger;
                // Loop through the data and append it to the table
                $.each(data, function (index, item) {
                    var row = '<tr>' +
                        '<td>' + item.name + '</td>' +
                        '<td>' + item.membershipType.name + '</td>' +
                        '<td>' + '<a class="btn btn-danger deletecust" id='+item.id+'>Delete</a>' + '</td>'
                        '</tr>';
                    tbody.append(row);
                });
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }
    function DeleteCustomer()
    {
        $('#myCustomer').on("click",".deletecust",function () {
            var button = $(this);
            var idvalue = button.attr("id");
            var url = "/Customers/Delete/"+idvalue;
            //debugger;
            bootbox.confirm({
                message: 'This is a confirm with custom button text and color! Do you like it?',
                buttons: {
                    confirm: {
                        label: 'Yes',
                        className: 'btn-success'
                    },
                    cancel: {
                        label: 'No',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {

                    $.ajax({
                        url: url,
                        type: 'GET',
                        dataType: 'json',
                        success: function (data) {
                            loadDatainTable();
                        },
                        error: function (xhr, status, error) {
                            console.error(error);
                        }
                    });
                }
            });
        });
    }
    
</script>
}
