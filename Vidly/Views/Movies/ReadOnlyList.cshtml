@model List<Vidly.Models.Movie>
@* @model List<BulkyWeb.Models.Category> *@

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6"><h2 class="text-primary">Movie List</h2></div>
        <div class="col-6 text-end">
        </div>
    </div>



    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th>Genre</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
